<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/linen</item>
        <item name="colorPrimaryDark">@color/sienna</item>
        <item name="colorAccent">@color/teal</item>
        <item name="colorControlActivated">@color/teal</item>
        <item name="colorControlNormal">@color/sienna</item>
        <item name="colorControlHighlight">@color/linen</item>
        <!--<item name="android:background">@color/black</item>

         You can also set colorControlNormal, colorControlActivated
        <item name="android:navigationBarColor">@color/teal</item>
             colorControlHighlight & colorSwitchThumbNormal. -->
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/black</item>
        <item name="android:dropDownSelector">@color/white</item>
        <item name="android:windowIsFloating">false</item>  <!-- crashes if true on sdk28 -->
        <item name="colorPrimary">@color/linen</item>
        <item name="colorPrimaryDark">@color/sienna</item>
        <item name="colorAccent">@color/teal</item>
        <item name="colorControlActivated">@color/teal</item>
        <item name="colorControlNormal">@color/sienna</item>
        <item name="colorControlHighlight">@color/linen</item>
    </style>


</resources>